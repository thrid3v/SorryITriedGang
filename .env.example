# RetailNexus Environment Variables
# Copy this file to .env and fill in your values

# OpenAI API Key (required for AI Analyst feature)
OPENAI_API_KEY=your_openai_key

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# File Upload Configuration
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=csv,xlsx,xls,tsv,parquet,json

# Pipeline Configuration
PIPELINE_INTERVAL_SECONDS=300A

# Data Directories (relative to project root)
DATA_RAW_DIR=data/raw
DATA_SILVER_DIR=data/silver
DATA_GOLD_DIR=data/gold
DATA_STAGING_DIR=data/staging
DATA_STREAMING_DIR=data/streaming
